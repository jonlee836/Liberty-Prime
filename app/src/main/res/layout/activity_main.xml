<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:padding="0dp"
    android:background="@drawable/libertyprime_4"
    tools:context="com.example.nonroot.LibertyPrime.MainActivity">

    <ImageButton
        android:id="@+id/playAll_Icon"

        android:layout_column="1"
        android:gravity="right"
        app:srcCompat="@drawable/bosicon"
        android:background="@android:color/transparent"
        style="@android:style/Widget.ImageButton"
        android:scaleType="fitStart"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/audioList"
        android:layout_alignStart="@+id/audioList"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="226dp"
        android:layout_width="45dp"
        android:layout_height="75dp" />

    <TextView
        android:id="@+id/topLabel_ADVICTORIUM"
        android:layout_column="0"
        android:maxLines="2"
        android:background="?android:selectableItemBackground"
        android:text="DEATH TO THE INSTITUTE\nAD VICTORIUM"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:onClick="AD_VICTORIUM"
        android:clickable="true"

        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="serif-monospace"
        android:lineSpacingExtra="12sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:drawableTintMode="multiply"
        android:layout_width="270dp"
        android:layout_alignTop="@+id/playAll_Icon"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/audioList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:dividerHeight="1dp"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="false"
        android:scrollbarSize="?android:attr/actionBarSize"
        style="@style/AlertDialog.AppCompat.Light"
        android:layout_below="@+id/topLabel_ADVICTORIUM"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
